{
    "compilerOptions": {
        "outDir": "./dist", // Lo almacenará en la carpeta dist
        "rootDir": "./src", 
        "lib": ["ES2020"], // Compilará a JS
        "target": "ES2020",
        "moduleResolution": "nodenext",
        "module": "NodeNext",
        "strict": false, // Permitirá tipo ANY
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"]
}